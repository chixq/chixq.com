{
  "locals": {
    "url": "https://chixq.com",
    "name": "a Blog",
    "owner": "Kris Chi",
    "description": "Kris Chi's personal blog with the help of wintersmith"
  },
  "plugins": [
    "./plugins/paginator.coffee",
    "wintersmith-stylus",
    "wintersmith-tag"
  ],
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
