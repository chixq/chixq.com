doctype html

html(lang='en')
    head
        block head
            meta(charset='utf-8')
            title
                block title
                    =locals.name
            link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
            link(rel='shortcut icon', href='/favicon.ico')
            link(rel='stylesheet', href='/css/style.css')
            link(rel='stylesheet', href='/css/fontello.css')
            link(rel='stylesheet', href='/css/animation.css')
            link(rel='stylesheet', href='/css/highlight/solarized_dark.css')
            |<!--[if IE 7]>
            link(rel='stylesheet', href='/css/fontello-ie7.css')
            |<![endif]-->
            link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans')
            link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Alegreya:400italic,400')
            link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Alegreya+SC')
    body
        div.container
            header
                a.blog-title(href=locals.url)= locals.name
            block content
            block prepend footer
        div.footer-container
            div.container
                footer
                    ul
                        li
                            a(href="/") Home
                        li
                            a(href="/archive.html") Archive
                    p.copyright &copy;#{ new Date().getFullYear() } #{ locals.owner }
                    div.powerby
                        ul
                            li
                                p Power by
                            li
                                a(href="https://plus.google.com/102207509899025112495?rel=author") Google Plus
                            li
                                a(href="https://wintersmith.io") WinterSmith
                            li
                                a(href="https://github.com/chixq") GitHub
    script(src=locals.url+"/asserts/js/googleanalytics.js", type="text/javascript")
    script(src=locals.url+"/asserts/js/highlight.pack.js", type="text/javascript")
    script hljs.initHighlightingOnLoad();
